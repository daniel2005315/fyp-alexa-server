<%# This is a EJS comment %>
<%# "locals" is the object containing the properties passed from
    res.render(). A property named 'username' can be referenced
    in two ways
    (A) As 'username' directly provided it is not undefined
    (B) As 'locals.username'
%>
<%
  // Set default values
  locals.username = locals.username || "";
  locals.loginMsg = locals.loginMsg || "";
  locals.user = locals.user || null;
%>
<%- include header.ejs %>

  <div class="container" id=content>

    <form action="/login" method=post >
      <h2 style="margin: 0 auto;"> Welcome!</h2>
      <h4 style="margin: 0 auto;"> Start using by linking with your Gmail account</h4>
      <div class="form-group mt-5 mx-auto" style="max-width: 300px;">
        <button id="signinButton" style="magin: 0 auto;" onclick="javascript:location.href='https://alexa-server-ck.herokuapp.com/auth/login'">Sign in with Google</button>

      </div>
    </form>

    <hr>
    <% if (loginMsg) { %>
      <div class="alert alert-warning" role="alert">
          <%= loginMsg %>
      </div>
    <% } %>

  </div>
